{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "fs",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "fs:allow-open",
        "fs:allow-write",
        "fs:allow-read",
        "fs:allow-rename",
        "fs:allow-mkdir",
        "fs:allow-remove",
        "fs:allow-write-text-file",
        "fs:read-meta",
        "fs:scope-download-recursive",
        "fs:scope-resource-recursive",
        {
            "identifier": "fs:scope-appdata-recursive",
            "allow": [
                {
                    "path": "$APPDATA/**"
                }
            ]
        }
    ]
}