{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "CS Assistant",
    "version": "25.6.1",
    "identifier": "cn.javat.csassistant",
    "build": {
        "beforeDevCommand": "vite",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "vue-tsc --noEmit && vite build",
        "frontendDist": "../dist"
    },
    "plugins": {
        "allowlist": {
            "all": true
        }
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "transparent": true,
                "decorations": false,
                "title": "CS Assistant",
                "center": true,
                "resizable": true,
                "width": 1280,
                "height": 720
            }
        ],
        "security": {
            "capabilities": [
                "default",
                "fs",
                "sql",
                "url",
                "http"
            ],
            "assetProtocol": {
                "enable": true,
                "scope": []
            },
            "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:"
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi",
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "webviewInstallMode": {
                "type": "offlineInstaller"
            },
            "wix": {
                "language": "zh-CN"
            },
            "nsis": {
                "installMode": "perMachine",
                "displayLanguageSelector": true
            }
        }
    }
}
