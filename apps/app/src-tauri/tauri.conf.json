{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "CS Assistant",
    "version": "1.0.5",
    "identifier": "cn.javat.csassistant",
    "build": {
        "beforeDevCommand": "vite dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "vue-tsc --noEmit && vite build",
        "frontendDist": "../dist"
    },
    "plugins": {
        "allowlist": {
            "all": true
        },
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDMkY3RUM2QUZDNDZCQjgKUldTNGE4U3Z4bjR2VExPVGk2ZnJzL0dBTCs3cDVJb3FCL0FTUVNJQVR6MXdDOWJtRytuK05rWDQK",
            "endpoints": [
                "https://gh-proxy.com/https://github.com/XiaoTangr/CS-Assistant/releases/latest/download/latest.json",
                "https://github.com/XiaoTangr/CS-Assistant/releases/latest/download/latest.json",
                "https://github.javat.cn/CS-Assistant/releases/latest.json"
            ]
        }
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "transparent": true,
                "decorations": false,
                "title": "CS Assistant",
                "center": true,
                "resizable": true,
                "width": 1280,
                "height": 720
            }
        ],
        "security": {
            "capabilities": [
                "default",
                "dialog",
                "fs",
                "sql",
                "opener",
                "http",
                "updater",
                "process"
            ],
            "assetProtocol": {
                "enable": true,
                "scope": []
            },
            "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost data:; connect-src ipc: http://ipc.localhost"
        }
    },
    "bundle": {
        "createUpdaterArtifacts": true,
        "active": true,
        "targets": [
            "msi",
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "webviewInstallMode": {
                "type": "offlineInstaller"
            },
            "wix": {
                "language": "zh-CN"
            },
            "nsis": {
                "installMode": "perMachine",
                "displayLanguageSelector": true
            }
        }
    }
}
